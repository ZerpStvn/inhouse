{
  "name": "secure-exam-browser",
  "version": "1.0.0",
  "description": "A secure exam browser system to prevent cheating during exams",
  "private": true,
  "workspaces": [
    "server",
    "admin"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=server",
    "dev:admin": "npm run dev --workspace=admin",
    "dev:client": "cd client && npm run dev",
    "build:server": "npm run build --workspace=server",
    "build:admin": "npm run build --workspace=admin",
    "build:client": "cd client && npm run build",
    "start:server": "npm run start --workspace=server",
    "db:push": "npm run db:push --workspace=server",
    "db:generate": "npm run db:generate --workspace=server"
  },
  "keywords": [
    "exam",
    "browser",
    "security",
    "lockdown",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3"
  }
}
